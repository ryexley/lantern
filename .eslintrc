{
  "extends": [
    "eslint",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 10
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "semi": [
      "error",
      "never"
    ],
    "require-jsdoc": [
      "off"
    ],
    "lines-around-comment": [
      "off"
    ],
    "func-style": [
      "error",
      "declaration",
      { "allowArrowFunctions": true }
    ],
    "no-console": [
      "warn"
    ],
    "space-before-function-paren": [
      "error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "off"
    ],
    "node/no-missing-import": [
      "off"
    ],
    "node/no-unpublished-import": [
      "off"
    ]
  }
}
